// Use this file as a starting point for your project's .eslintrc.
// Copy this file, and add rule overrides as needed.
{
  "extends": "airbnb-base",
  "env": {
    "mocha": true
  },
  "globals": {
    "expect": true
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "rules": {
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "no-loop-func": "off",
    "no-param-reassign": "off",
    "no-plusplus": "off"
  }
}
